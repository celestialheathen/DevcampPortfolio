<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %>
      <%= portfolio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">GitHub</button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Video Demo</button>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div> 